            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"full_name\": \"John Farmer\",\n  \"email\": \"john.farmer@example.com\",\n  \"password\": \"password123\",\n  \"confirmPassword\": \"password123\",\n  \"location\": \"Nairobi, Kenya\",\n  \"role\": \"farmer\"\n}"
